@import 'reset.css'

primary-color = #ff8a00
secondary-color = #fffae6
success-color = #1bd97b
text-color = #2d2a40

title(size)
  font-family: 'Montserrat', sans-serif
  font-weight: 700
  font-size: size
  color: primary-color

html, body
  height: 100%
  background-color: secondary-color
  font-family: 'Inter', sans-serif

#app
  height: 100%
  display: flex
  justify-content: center
  align-items: center

.container
  background-color: #ffffff
  width: 1100px
  height: 550px
  border-radius: 4px
  box-shadow: 2px 10px 20px rgba(255, 138, 0, 0.1)
  position: relative

.stepper
  background-color: secondary-color
  width: 500px
  height: 70px
  border-radius: (@height / 2)
  position: absolute
  top: -(@height / 2)
  left: 50%
  margin-left: -(@width / 2)
  display: flex
  justify-content: center
  align-items: center

.stepper__step
  display: flex
  align-items: center
  font-size: 16px
  .number
    width: 30px
    line-height: 30px
    text-align: center
    background-color: primary-color
    opacity: 0.2
    color: #ffffff
    border-radius: 15px
  .text
    margin-left: 10px
    color: primary-color
  &.completed .number
    opacity: 1

.stepper__arrow
  margin: 0 20px
  font-size: 24px
  color: primary-color
  .material-icons
    line-height: 30px

.back
  display: flex
  align-items: center
  position: absolute
  top: 30px
  left: 40px
  cursor: pointer
  opacity: 0.6
  &:hover
    opacity: 1

.back__icon
  font-size: 18px

.back__text
  font-size: 14px
  margin-left: 5px

.content
  margin-top: 70px
  display: flex

.content__left
  flex: 1
  padding: 0 40px

.header
  margin-bottom: 30px

.header__text
  title: 36px
  position: relative
  z-index: 2

.header__underline
  width: 300px
  height: 8px
  background-color: #eeeeee
  position: relative
  top: -14px
  z-index: 1

.msg--error
  font-size: 13px
  color: primary-color
  
#delivery .form
  display: flex

.form__details
  width: 400px
  margin-right: 20px

.form__dropshipper
  width: 300px
  position: relative

.form__dropshipper .checkbox
  position: absolute
  top: -45px
  right: 0

.checkbox__label
  display: flex
  align-items: center
  opacity: 0.6
  &:hover
    opacity: 1
  .text
    margin-left: 10px
  .box
    width: 20px
    height: 20px
    border: 1px solid #cccccc
    .icon
      font-size: 18px
      color: success-color
      visibility: hidden

.checkbox__input
  position: fixed
  width: 0
  &:checked + .checkbox__label
    opacity: 1
    .box
      border: 2px solid success-color
      .icon
        visibility: visible

.input-group 
  position: relative
  margin-bottom: 10px
  label
    position: absolute
    left: 15px
    top: 20px
    font-size: 16px
    opacity: 0.4
    cursor: text
    transition: 0.2s ease all
    .label--valid
      color: success-color
    .label--invalid
      color: primary-color
  .icon
    position: absolute
    right: 10px
    top: 20px
    visibility: hidden
    &.icon--valid
      color: success-color
      visibility: visible
    &.icon--invalid
      color: primary-color
      visibility: visible
  input, textarea
    width: 100%
    padding: 30px 15px 10px 15px
    border: 1px solid #cccccc
    box-sizing: border-box
    font-size: 16px
    outline: none
    &:focus, &:valid
      color: #2d2a40
    &:focus + label, &:valid + label
      top: 10px
      font-size: 13px
      opacity: 0.8
    &.input--valid
      border: 1px solid success-color
    &.input--invalid
      border: 1px solid primary-color
  input
    height: 60px
  textarea
    height: 120px
    resize: vertical
    font-family: 'Inter', sans-serif

.shipment, .payment
  margin-bottom: 45px

.choice-group
  display: flex
  margin-bottom: 5px

.choice
  margin-right: 10px
  position: relative

.choice__check
  position: absolute
  right: 10px
  top: 20px
  color: success-color
  visibility: hidden

.choice__label
  width: 180px
  height: 60px
  padding: 0 15px
  display: flex
  align-items: center
  border: 1px solid #cccccc
  box-sizing: border-box
  font-size: 16px
  color: #000000
  &:hover
    border: 2px solid success-color
  p .text
    font-size: 13px
    opacity: 0.8

.choice__input
  position: fixed
  width: 0
  &:checked + .choice__label
    background: rgba(27, 217, 123, 0.1)
    border: 2px solid success-color
  &:checked ~ .choice__check
    visibility: visible

#thankyou
  margin: 100px 0 0 200px

.order
  margin-top: 26px
  font-size: 14px

.delivery-text
  font-size: 14px
  opacity: 0.6

.gohome
  margin-top: 60px
  display: flex
  align-items: center
  cursor: pointer
  opacity: 0.6
  &:hover
    opacity: 1

.gohome__icon
  font-size: 18px

.gohome__text
  font-size: 14px
  margin-left: 5px

.content__divider
  width: 1px
  background-color: primary-color
  opacity: 0.2

.content__right
  width: 260px
  height: 460px
  padding: 0 20px
  position: relative

.summary__header
  title: 24px

.summary__purchased
  margin-top: 10px
  font-size: 14px
  opacity: 0.6

.summary__item
  margin-top: 20px
  .divider
    width: 80px
    height: 1px
    background-color: #d8d8d8
  .text
    margin-top: 20px
    font-size: 14px
  .value
    margin-top: 5px
    font-size: 16px
    color: success-color

.pricing
  width: 260px
  position: absolute
  bottom: 0

.pricing__item
  display: flex
  justify-content: space-between
  margin-bottom: 10px
  font-size: 14px
  .text
    opacity: 0.6

.pricing__item.total
  title: 24px
  margin-top: 20px
  .text
    opacity: 1

.pricing__btn-continue
  width: 100%
  height: 60px
  margin-top: 20px
  background-color: primary-color
  border: 1px solid rgba(255, 255, 255, 0.2)
  box-sizing: border-box
  box-shadow: 3px 5px 10px rgba(255, 138, 0, 0.2)
  border-radius: 2px
  font-family: 'Inter', sans-serif
  font-size: 18px
  color: #ffffff
  outline: none
  cursor: pointer
