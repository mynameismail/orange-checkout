@import 'reset.css'

primary-color = #ff8a00
secondary-color = #fffae6
success-color = #1bd97b
text-color = #2d2a40

title(size)
  font-family: 'Montserrat', sans-serif
  font-weight: 700
  font-size: size
  color: primary-color

html, body
  height: 100%
  background-color: secondary-color
  font-family: 'Inter', sans-serif

#app
  height: 100%
  display: flex
  justify-content: center
  align-items: center

.container
  background-color: #ffffff
  width: 1100px
  height: 550px
  border-radius: 4px
  box-shadow: 2px 10px 20px rgba(255, 138, 0, 0.1)
  position: relative

.stepper
  background-color: secondary-color
  width: 500px
  height: 70px
  border-radius: (@height / 2)
  position: absolute
  top: -(@height / 2)
  left: 50%
  margin-left: -(@width / 2)
  display: flex
  justify-content: center
  align-items: center

.stepper__step
  display: flex
  align-items: center
  font-size: 16px
  .number
    width: 30px
    line-height: 30px
    text-align: center
    background-color: primary-color
    opacity: 0.2
    color: #ffffff
    border-radius: 15px
  .text
    margin-left: 10px
    color: primary-color
  &.completed .number
    opacity: 1

.stepper__arrow
  margin: 0 20px
  font-size: 24px
  color: primary-color
  .material-icons
    line-height: 30px

.back
  display: flex
  align-items: center
  position: absolute
  top: 30px
  left: 40px
  cursor: pointer
  opacity: 0.6
  &:hover
    opacity: 1

.back__icon
  font-size: 18px

.back__text
  font-size: 14px
  margin-left: 5px

.content
  margin-top: 70px
  display: flex

.content__left
  flex: 1
  padding: 0 40px

.header__text
  title: 36px
  position: relative
  z-index: 2

.header__underline
  width: 300px
  height: 8px
  background-color: #eeeeee
  position: relative
  top: -14px
  z-index: 1

.content__divider
  width: 1px
  background-color: primary-color
  opacity: 0.2

.content__right
  width: 260px
  height: 460px
  padding: 0 20px
  position: relative

.summary__header
  title: 24px

.summary__purchased
  margin-top: 10px
  font-size: 14px
  opacity: 0.6

.summary__item
  margin-top: 20px
  .divider
    width: 80px
    height: 1px
    background-color: #d8d8d8
  .text
    margin-top: 20px
    font-size: 14px
  .value
    margin-top: 5px
    font-size: 16px
    color: success-color

.pricing
  width: 260px
  position: absolute
  bottom: 0

.pricing__item
  display: flex
  justify-content: space-between
  margin-bottom: 10px
  font-size: 14px
  .text
    opacity: 0.6
  &.total
    title: 24px
    margin-top: 20px
    .text
      opacity: 1

.pricing__btn-continue
  width: 100%
  height: 60px
  margin-top: 20px
  background-color: primary-color
  border: 1px solid rgba(255, 255, 255, 0.2)
  box-sizing: border-box
  box-shadow: 3px 5px 10px rgba(255, 138, 0, 0.2)
  border-radius: 2px
  font-family: 'Inter', sans-serif
  font-size: 18px
  color: #ffffff
